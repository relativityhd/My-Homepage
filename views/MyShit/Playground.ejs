          <script>
            function testDates(now){
              let nowStamp = now.getTime()
              let yesterday = new Date(nowStamp+1000*60*60*24)
              if (now.getDay() == 6) {
                yesterday = new Date(nowStamp+1000*60*60*24*2)
              } else if (now.getDay() == 5) {
                yesterday = new Date(nowStamp+1000*60*60*24*3)
              }
              yesterday = new Date(yesterday.getFullYear(), yesterday.getMonth(), yesterday.getDate())
              return yesterday
            }

            console.log("Sunday 09: ", testDates(new Date(2020, 1, 9)))
            console.log("Monday 10: ", testDates(new Date(2020, 1, 10)))
